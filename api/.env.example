# API Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://sushiii_user:sushiii_password@localhost:5432/sushiii"
PGBOUNCER_URL="postgresql://sushiii_user:sushiii_password@localhost:6432/sushiii"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Constellation Network Endpoints
GLOBAL_L0_URL=http://localhost:9000
METAGRAPH_L0_URL=http://localhost:9200
METAGRAPH_L1_URL=http://localhost:9400
METAGRAPH_ID=

# Cryptographic Keys
# Generate these keys using: node scripts/generate-keys.js

# dag4.js Private Key (for HGTP submissions)
PRIVATE_KEY=

# Ed25519 Keys (for proof bundle signing)
SIGNING_PRIVATE_KEY=
SIGNING_PUBLIC_KEY=

# Tenant API Keys (Legacy - will be replaced by database-based tenants)
# Format: TENANT_<api-key>=<tenant-id>
TENANT_test-key=test-tenant
TENANT_dev-key=dev-tenant

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Tenant Quotas (Default values)
DEFAULT_TENANT_QUOTA_POLICIES=1000
DEFAULT_TENANT_QUOTA_CONSENTS=10000
DEFAULT_TENANT_QUOTA_PROOFS=5000
DEFAULT_TENANT_QUOTA_STORAGE_MB=1024

# Event Sourcing
SNAPSHOT_FREQUENCY=100
EVENT_RETENTION_DAYS=365

# Cache TTL (seconds)
CACHE_TTL_PROOF_BUNDLE=604800
CACHE_TTL_POLICY=86400
CACHE_TTL_CONSENT=3600
CACHE_TTL_SESSION=900

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
